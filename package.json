{
  "name": "epubview",
  "displayName": "EpubView",
  "description": "A VSCode extension for reading EPUB files directly in your editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "epubview-explorer",
          "title": "EPUB Reader",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "epubview-explorer": [
        {
          "id": "epubview.contents",
          "name": "EPUB Contents",
          "when": "epubview.hasEpubOpen",
          "icon": "$(book)"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "epubview.editor",
        "displayName": "EPUB Reader",
        "selector": [
          {
            "filenamePattern": "*.epub"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "epubview.showCredits",
        "title": "About & Support",
        "category": "EpubView"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:css && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "build:css": "tailwindcss -i ./src/webviews/credits/input.css -o ./src/webviews/credits/styles.css",
    "watch:css": "tailwindcss -i ./src/webviews/credits/input.css -o ./src/webviews/credits/styles.css --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && pnpm run build:css && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "epubjs": "^0.3.93",
    "jszip": "^3.10.1"
  }
}
